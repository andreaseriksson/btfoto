<%= simple_form_for([:admin, @appointment], :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :label, input_html: {class: 'input-large'} %>
    <%= f.input :start_time, input_html: {class: 'input-small'} %>
    <%= f.input :booked %>
    <%= f.input :approved %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-alt btn-primary' %>
    <%= link_to 'Cancel', '/admin/news', class: 'btn btn-alt' %>
  </div>
<% end %>