<%= simple_form_for([:admin, @gallery], :html => {:class => 'form-horizontal', :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :image do %>
      <%= f.file_field :image %>
    <%end %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-alt btn-primary' %>
    <%= link_to 'Cancel', '/admin/news', class: 'btn btn-alt' %>
  </div>
<% end %>