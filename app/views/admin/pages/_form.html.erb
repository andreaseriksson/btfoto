<%= simple_form_for([:admin, @page], :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: {class: 'input-xxlarge'} %>
    <%= f.input :content, input_html: {class: 'input-xxlarge editor'} %>
    <%= f.input :active %>
    <div class="control-group">
      <%= f.label :parent_id, :class => 'control-label'  %>
      <div class="controls">
        <%= f.collection_select :parent_id, Page.roots, :id, :title, include_blank: true %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>