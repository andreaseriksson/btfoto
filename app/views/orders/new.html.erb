<% content_for(:tagline) do %>
  <h1><%= t 'store.index.store_heading' %></h1>
<% end %>

<%= store_page_markup(%w(/store/payment_info)) do %>
  <h3><%= t '.form_heading' %></h3>
  <%= simple_form_for @order, html: { class: 'form-horizontal' } do |f| %>
    <%= f.input :first_name %>
    <%= f.input :family_name %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :zip %>
    <br><br>

    <h3><%= t '.payment_options' %></h3>
    <p class="radio-buttons">
      <%= f.collection_radio_buttons :payment_type,
          [['card', t('.card')] ,['cash', t('.cash')]],
          :first, :last, checked: 'card' %>
    </p>

    <div class="school-catalog" style="<%= displayed? %>">
    <h3><%= t '.catalog_heading' %></h3>
      <p><%= t '.catalog_text' %></p>
      <p class="radio-buttons">
        <%= f.collection_radio_buttons :extra_shipment,
            [[false, t('.same_delivery')], [true, t('.extra_shipment')]],
            :first, :last, checked: false %>
      </p>
      <p><small><%= t '.catalog_disclaimer' %></small></p>
    </div>
    <div align="right">
      <br><br>
      <%= f.button :submit, t('.create_order'), class: 'btn btn-success btn-large' %>
    </div>
  <% end %>

  <hr>

  <div class="row-fluid">
    <div class="span6">
      <h3><%= t '.payment_info_heading' %></h3>
      <%== t '.payment_info_text' %>
    </div>
    <div class="span6">
      <%== t '.payment_info_logo' %>
    </div>
  </div>

<% end %>
