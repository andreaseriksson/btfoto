<% flash.each do |name, msg| %>
  <% if msg == t('store.auth.notice') %>
    <script>
      $(function() {
        $('#test-image').modal('show')
      });
    </script>
  <% end %>
<% end %>

<div id="test-image" class="modal hide fade" tabindex="-1" role="dialog">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Provbild</h3>
  </div>
  <div class="modal-body">
    <p>Du har loggat in med bildnummer: <%= "#{@picture.name}#{@picture.letter}" %></p>
    <% if @picture.syblings.any? %>
      <p>
        Längre ner på sidan kan du välja att byta till bildnummrena: <br>
        <%== @picture.syblings.map { |pic| "#{pic.name}#{pic.letter}" }.join('<br>') %>
      </p>
    <% end %>
    <div class="row-fluid">
      <div class="span6 offset3">
        <div class="thumbnail">
          <%= image_tag @picture.image %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal">Stäng</button>
  </div>
</div>
