<div class="row-fluid">
  <div class="span6">
    <h1><%= @product_type and @product_type > 0 ? @product_types.types[@product_type] : "Visar alla produkter" %></h1>
  </div>
  <div class="span6">
    <div class="btn-toolbar pull-right">
      <!--<div class="btn-group">
        <button class="btn active"><i class="icon-th"></i></button>
        <button class="btn"><i class="icon-align-justify"></i></button>
      </div>-->
      <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Filtrera <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Visa alla", store_path(product_type: "") %></li>
          <% @product_types.types.each do |key, product_type| %>
          <li><%= link_to product_type, store_path(product_type: key) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<% if @product_type and @product_type > 0 %>
  <p><%== t("product_type_text_#{@product_type}") %></p>
<% end %>
