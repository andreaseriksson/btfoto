<div class="row-fluid">
  <div class="span6">
    <h1><%= @product_type && @product_type > 0 ? @product_types.types[@product_type] : t('.header') %></h1>
  </div>
  <div class="span6">
    <div class="btn-toolbar pull-right">
      <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <%= t '.filter' %> <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to t('.show_all'), store_path(product_type: '') %></li>
          <% @product_types.types.each do |key, product_type| %>
            <li><%= link_to product_type, store_path(product_type: key) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
