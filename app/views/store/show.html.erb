<% content_for(:tagline) do %> 
  <h1>Beställ bilder</h1>
<% end %>

<!--main content-->
<section class="mainContentWrap">
  <div class="container mainContent">
    <div class="row-fluid">
      
      <div class="span9">
        <div class="row-fluid">
          <div class="innerSpacer">
            
            <!--post content-->
            <div class="contentWrap">
              
              <h2>
                <%= @product.name %> 
                <span class="pull-right"><%= to_curr(@product.price * (1+@product.vat)) %>Kr</span>
              </h2>
              <div class="row-fluid">
                <div class="span6 thumbnail">
                  <%= image_tag @product.image %>
                </div>
                <div class="span6">
                  <%= raw @product.description %>
                  <hr>
                  <%= link_to 'Tillbaka', store_path, class: 'btn' %>
                  <%= button_to "Lägg till", add_to_cart_path(product_id: @product.id), class: 'btn btn-success' %>
                </div> 
              </div>
	  
            </div>
            <!--end post content-->       
          </div>
        </div>
      </div>
        
      <aside class="span3 sidebar">
        
        <%= render "cart" %>
        
        <% if @cart.days_left >= 0 %>
        <div class="widget alert">
          <h4><%= @cart.days_left %> dagar kvar</h4>
          <span>För att få 10% rabatt på din order (Exkl. skolkatalog).</span>
        </div>
        <% end %>
                
        <%= render "customer_image" %>
        <%= render "payment_info" %>
      </aside> <!--end sidebar-->
    </div>
  </div>
</section>