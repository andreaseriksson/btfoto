<% content_for(:tagline) do %>
  <h1>Beställ bilder</h1>
<% end %>

<%= render 'content_top' %>

  <%= render 'store_header', product_types: @product_types %>

  <% @i = 0 %>
  <% @products.each_with_index do |product, index| %>
    <%= raw('<div class="row-fluid">') if @i == 0 || @i % 3 == 0 %>
    <% @i += 1 %>
    <%= render 'product', product: product %>
    <%= raw("</div><!-- end row-fluid -->") if @i == @products.count || @i % 3 == 0 %>
  <% end %>

  <% if @products.size == 0 %>
    <h5>Det finns tyvärr inga produkter i den här kategorin med detta bild nr.</h5>
  <% end %>

<%= render 'content_bottom', partials: %w(cart days_left customer_image payment_info) %>
