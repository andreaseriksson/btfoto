<% content_for(:tagline) do %>
  <h1><%= t 'appointments.index.appointment_heading' %></h1>
<% end %>

<%= store_page_markup([]) do %>
  <h4><%= @appointment.label %> <%= @appointment.start_time.strftime("%Y-%m-%d %H:%M") %></h4>

  <%= simple_form_for @appointment, html: { class: 'form-horizontal' } do |f| %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <div align="right">
      <br><br>
      <%= f.button :submit, t('appointments.index.book'), class: 'btn btn-success' %>
    </div>
  <% end %>

<% end %>
